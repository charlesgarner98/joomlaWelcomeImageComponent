<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.2.0" method="upgrade">

	<name>Welcome Image</name>
	<!-- The following elements are optional and free of formatting constraints -->
	<creationDate>November 2018</creationDate>
	<author>Charles Garner</author>
	<authorEmail>charlesgarne98@gmail.com</authorEmail>
	<authorUrl>http://charlesgarner.uk</authorUrl>
	<!--  The version string is recorded in the components table -->
	<version>1.0.2</version>
	<!-- The description is optional and defaults to the name -->
	<description>Display a welcome image for DLC Online</description>

	<install> <!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>

	<update> <!-- Runs on update; New since J2.5 -->
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<!-- UPDATESERVER DEFINITION -->
	<updateservers>
		<!-- Note: No spaces or linebreaks allowed between the server tags -->
		<server type="extension" priority="1" name="Welcome Image Component Update Site">https://raw.githubusercontent.com/charlesgarner98/joomlaWelcomeImageComponent/master/welcomeImage-update.xml</server>
	</updateservers>

	<!-- Site Main File Copy Section -->
	<!-- Note the folder attribute: This attribute describes the folder
		to copy FROM in the package to install therefore files copied
		in this section are copied from /site/ in the package -->
	<files folder="site">
		<filename>index.html</filename>
		<filename>welcomeimage.php</filename>
	</files>

	<administration>
		<!-- Administration Menu Section -->
		<menu link='index.php?option=com_welcomeimage'>Welcome Image</menu>
		<!-- Administration Main File Copy Section -->
		<!-- Note the folder attribute: This attribute describes the folder
			to copy FROM in the package to install therefore files copied
			in this section are copied from /admin/ in the package -->
		<files folder="admin">
			<!-- Admin Main File Copy Section -->
			<filename>index.html</filename>
			<filename>welcomeimage.php</filename>
			<filename>ajax.php</filename>
			<!-- SQL files section -->
			<folder>sql</folder>
		</files>
	</administration>

</extension>
